@model W3KlinikKami.Models.TB_AKUN
@using W3KlinikKami.Messege

<div class="form-content">
    @{
        Html.RenderPartial("~/Views/Shared/FlashMessage.cshtml");
    }
    @using (Html.BeginForm("EditPassword", "Index", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-error" })

        <div class="form-item">
            <h2><u>Edit Password</u></h2>
        </div>

        @* password baru *@
        <div class="form-item">
            <div class="label-form-item">@Html.LabelFor(model => model.PASSWORD_BARU)</div>
            @Html.PasswordFor(model => model.PASSWORD_BARU, new { @placeholder = "Password Baru", @autocomplete = "off", @autofocus = "true" })
            @Html.ValidationMessageFor(model => model.PASSWORD_BARU, "", new { @class = "text-error" })
        </div>

        @* password saat ini *@
        <div class="form-item">
            <div class="label-form-item">@Html.Label("Password Saat Ini", new { @for = "PASSWORD_AKUN" })</div>
            @Html.PasswordFor(model => model.PASSWORD_AKUN, new { @placeholder = "Password Saat Ini", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.PASSWORD_AKUN, "", new { @class = "text-error" })
            <div class="form-item-flex">
                @Html.CheckBox("ShowPassword", false, new { @id = "sp", @onclick = "ckbShowPassword(this.checked, 'PASSWORD_AKUN'); ckbShowPassword(this.checked, 'PASSWORD_BARU');" })
                @Html.Label("Show Password", new { @for = "sp" })
            </div>
        </div>

        <div class="form-item">
            <input type="submit" value="Submit Perubahan" />
        </div>
    }
</div>