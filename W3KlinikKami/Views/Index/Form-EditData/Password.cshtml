@model W3KlinikKami.Models.TB_AKUN

<div class="form-content">
    @using (Html.BeginForm("EditPassword", "Index", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-error" })

        <div class="form-item">
            <h2><u>Edit Password</u></h2>
        </div>

        @* password baru *@
        <div class="form-item">
            @Html.TextBoxFor(model => model.PASSWORD_BARU, null, new { @placeholder = "Password Baru", @autocomplete = "off", @autofocus = "true" })
            @Html.ValidationMessageFor(model => model.PASSWORD_BARU, "", new { @class = "text-error" })
        </div>

        @* password saat ini *@
        <div class="form-item">
            @Html.PasswordFor(model => model.PASSWORD_AKUN, new { @placeholder = "Password Saat Ini", @id = "pss", @autocomplete = "off" })
            @Html.ValidationMessageFor(model => model.PASSWORD_AKUN, "", new { @class = "text-error" })
            <div class="form-item-flex">
                @Html.CheckBox("ShowPassword", false, new { @id = "sp", @onclick = "ckbShowPassword(this.checked, 'pss')" })
                @Html.Label("Show Password", new { @for = "sp" })
            </div>
        </div>

        <div class="form-item">
            <input type="submit" value="Submit Perubahan" />
        </div>
    }
</div>