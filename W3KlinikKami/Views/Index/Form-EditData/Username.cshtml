@model W3KlinikKami.Models.TB_AKUN

<div class="form-content">
    @{
        Html.RenderPartial("~/Views/Shared/FlashMessage.cshtml");
    }
    @using (Html.BeginForm("EditUsername", "Index", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-error" })

        <div class="form-item">
            <h2><u>Edit Username</u></h2>
        </div>

        @* username baru *@
        <div class="form-item">
            <div class="label-form-item">@Html.Label("Username Baru", new { @for = "USERNAME" })</div>
            @Html.TextBoxFor(model => model.USERNAME, null, new { @placeholder = "Username Baru", @autocomplete = "off", @autofocus = "true" })
            @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-error" })
        </div>

        @* Password *@
        <div class="form-item">
            <div class="label-form-item">@Html.Label("Password Saat Ini", new { @for = "PASSWORD_AKUN" })</div>
            @Html.PasswordFor(model => model.PASSWORD_AKUN, new { @placeholder = "Password Saat Ini" })
            @Html.ValidationMessageFor(model => model.PASSWORD_AKUN, "", new { @class = "text-error" })
            <div class="form-item-flex">
                @Html.CheckBox("ShowPassword", false, new { @id = "sp", @onclick = "ckbShowPassword(this.checked, 'PASSWORD_AKUN')" })
                @Html.Label("Show Password", new { @for = "sp" })
            </div>
        </div>

        <div class="form-item">
            <input type="submit" value="Submit Perubahan" />
        </div>
    }
</div>