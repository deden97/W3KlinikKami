@model W3KlinikKami.Models.TB_USER

@{
    ViewBag.Title = "Edit";
}

<style>
    .edit-body {
        position: relative;
        display: flex;
        justify-content: center;
    }

    .edit-submenu {
        position: relative;
        width: max-content;
        height: max-content;
        border: 1px solid red;
        border-radius: 10px;
        padding: 10px;
    }

    .btn-edit-submenu {
        position: relative;
        padding: 5px;
        margin: 5px;
        width: 150px;
        border: 1px solid red;
    }

    .edit-content {
        position: relative;
        border-left: 1px solid red;
        margin-left: 5px;
        width: 100%;
        height: 670px;
        padding: 5px;
    }
</style>

<div class="edit-body">
    <div class="edit-submenu">
        <div class="btn-edit-submenu">@Html.ActionLink("Edit Data", "EditData", "Index")</div>
        <div class="btn-edit-submenu">@Html.ActionLink("Edit Username", "EditUsername", "Index")</div>
        <div class="btn-edit-submenu">@Html.ActionLink("Edit Password", "EditPassword", "Index")</div>
    </div>

    <div class="edit-content">
        @{
            if (ViewBag.EditMode == "Edit Data")
            {
                @Html.Partial("~/Views/Index/Form-EditData/Data.cshtml", Model)
            }
            else if (ViewBag.EditMode == "Edit Username")
            {
                @Html.Partial("~/Views/Index/Form-EditData/Username.cshtml")
            }
            else
            {
                @Html.Partial("~/Views/Index/Form-EditData/Password.cshtml")
            }
        }
    </div>
</div>