<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Global.css" rel="stylesheet" />
    <script src="~/Scripts/Global.js"></script>
</head>
<body>
    @{
        TB_USER dtUser = new TB_USER();
        if (ViewBag.DT_USER != null)
        {
            dtUser = (W3KlinikKami.Models.TB_USER)ViewBag.DT_USER;
        }
    }
    <header id="head">
        @* Foto profil, nama, jabatan *@
        <nav>
            <div class="form-item-flex margin-bottom-10px width-200px">
                <img src="@Url.Content(dtUser.FOTO)" alt="Foto - @dtUser.NAMA" title="@dtUser.NAMA" class="foto-profil" />
                <div class="form-item">
                    @Html.Label(dtUser.NAMA)
                    @Html.Label(dtUser.TB_JABATAN.JABATAN)
                </div>
            </div>
        </nav>

        @* Home "W3.Klinik.Kami" *@
        <h2>
            @Html.ActionLink("W3.Klinik.Kami", "Index", "Index")
        </h2>

        @* Edit, Logout *@
        <nav>
            <ul class="nav-menu">
                <li>@Html.ActionLink("Edit", "EditData", "Index", null, new { @class = "btn-edit" })</li>
                <li>@Html.ActionLink("Logout", "Logout", "Index", null, new { @class = "btn-logout" })</li>
            </ul>
        </nav>
    </header>

    @* Render content *@
    <div class="content">
        @RenderBody()
    </div>

    @* tombol menuju halaman paling atas *@
    <div class="back-top" onclick="clickLinkByDiv('top')">
        <a href="#head" id="top"><b>Top</b></a>
    </div>
</body>
</html>